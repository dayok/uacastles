<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lvivguide.SettingsActivity"
    tools:ignore="MergeRootFrame" >

    <RadioButton
        android:id="@+id/radio0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:checked="true"
        android:onClick="walkOnClick"
        android:text="Пішки"
        android:textSize="32sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200px"
        android:onClick="btnOnClick"
        android:text="Зберегти"
        android:textSize="32sp" />

    <RadioButton
        android:id="@+id/radioButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="51dp"
        android:text="Загальна"
        android:onClick="allOnClick"
        android:checked="true"
        android:textSize="32sp" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/radioButton1"
        android:text="Визначні місця"
        android:onClick="musOnClick"
        android:textSize="32sp" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/radioButton2"
        android:text="Ресторації"
        android:onClick="restOnClick"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:checked="true"
        android:text="Виберіть тип екскурсії"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="32sp" />

    <RadioButton
        android:id="@+id/radio1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/radio0"
        android:onClick="driveOnClick"
        android:text="Авто"
        android:textSize="32sp" />

</RelativeLayout>